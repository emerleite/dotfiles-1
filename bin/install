#!/bin/bash

# install homebrew
ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

# Update homebrew
brew install bash-completion git
brew update
brew upgrade

# install homebrew cask
brew tap caskroom/cask

# install homebrew bash-completion
brew tap homebrew/completions

# install mas
brew install mas

# install essentials
brew install \
aria2 \
autoconf \
automake \
colordiff \
direnv \
docker-completion \
docker-compose-completion \
exiftool \
graphicsmagick \
imagemagick \
jpegoptim \
openssl \
packer \
packer-completion \
pip-completion \
pngcrush \
sift \
sqlite \
ssh-copy-id \
terraform \
tree \
wget \
z \
zopfli \


# install "out of appstore" apps

brew cask install \
atom \
droplr \
github-desktop \
google-drive \
hammerspoon \
iterm2 \
kodi \
macvim \
microsoft-office \
netspot \
notational-velocity \
sketch \
slack \
spotify \
transmission \
vlc \
winbox \

# install apps
mas install 937984704 # Amphetamine
mas install 1078184147 # Capto
mas install 969418666 # ColorSnapper2
mas install 576421334 # Converto - The Unit Converter
mas install 449589707 # Dash 3
mas install 411643860 # DaisyDisk
mas install 975937182 # Fantastical 2
mas install 685096913 # Hyper 3
mas install 408981434 # iMovie
mas install 587512244 # Kaleidoscope
mas install 409183694 # Keynote
mas install 926036361 # LastPass
mas install 1010557319 # Marboo Pro
mas install 409203825 # Numbers
mas install 409201541 # Pages
mas install 429449079 # Patterns - The Regex App
mas install 407963104 # Pixelmator
mas install 403388562 # Transmit
mas install 425424353 # The Unarchiver

# install sshfs
brew cask install sshfs

# install python
brew install \
pyenv \
pyenv-virtualenv

# install ruby
\curl -sSL https://get.rvm.io | bash -s stable

# install java
brew cask install java

brew install \
ant \
maven \
maven-completion \
gradle \
selenium-server-standalone \

# install android
brew install \
android-sdk \
android-ndk \
gradle \
exiftool \

brew cask install \
xquartz \
inkscape \

# install scala
brew install \
scala \
sbt \

# install node
brew install node

# install go
brew install go
