#!/bin/bash

# build tools
is_xcode_installed() {
    xcode-select --print-path &> /dev/null
}

xcode-select --install

until is_xcode_installed; do
	sleep 5
done

# install homebrew
ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

brew install git

brew update

brew install bash-completion

# install homebrew cask
brew tap caskroom/cask

# install mas
brew install mas

# install essential
brew install \
aria2 \
git \
direnv \
automake \
tree \
ssh-copy-id \
wget \
colordiff \
sift \
autoconf \
automake \
bash-completion \
desk \
z \
openssl \
exiftool \
sqlite \
zopfli \
wget \
jpegoptim \
pngcrush \
imagemagick \
graphicsmagick \
google-drive \

brew cask install \
droplr \
notational-velocity \
macvim \
atom \
hammerspoon \
github-desktop \
iterm2 \
transmission \
vlc \
spotify \
winbox \
sketch \
slack \
kodi \
netspot \

# install sshfs
brew cask install sshfs

# install python
brew install \
pyenv \
pyenv-virtualenv

# install ruby
\curl -sSL https://get.rvm.io | bash -s stable

# install java
brew cask install java

brew install \
ant \
maven \
gradle \
selenium-server-standalone \

# install android
brew install \
android-sdk \
android-ndk \
gradle \
exiftool \

brew cask install \
xquartz \
inkscape \

# install scala
brew install \
scala \
sbt \

# install node
brew install node

# install go
brew install go
